<Window x:Class="Первый_проект_за_год_xddddddd.Windows.HotelEditWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Первый_проект_за_год_xddddddd.Windows"
        mc:Ignorable="d"
        Title="HotelEditWin" Height="450" Width="500" Icon="imgs/Лого.jpg" Style="{StaticResource StyleWin}">
    <Grid>
        <Viewbox Margin="10">
            <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Название</Label>
            <TextBox Height="30" Text="{Binding Name}"></TextBox>
            <Label>Количество звезд</Label>
            <TextBox Height="30" Text="{Binding CountOfStars}"></TextBox>
            <Label>Страна</Label>
                <ComboBox DisplayMemberPath="Name" SelectedValue="{Binding CountryCode}" SelectedValuePath="Code" Name="cb_Countries"></ComboBox>
                <Button Content="Сохранить" Click="bt_SaveClick" Margin="0, 10"/>
        </StackPanel>
        </Viewbox>

    </Grid>
</Window>
